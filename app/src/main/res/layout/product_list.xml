<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            android:layout_height="130dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/shirtimage"
                    android:id="@+id/iview"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/shirt_image"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shirts"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#ffffff"
                    android:id="@+id/tview"
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="58dp"
                    android:layout_alignTop="@+id/iview" android:layout_marginTop="42dp"/>

        </RelativeLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>